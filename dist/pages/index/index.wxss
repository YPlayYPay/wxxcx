.navbar {
  width: 100%;
  height: 80rpx;
  display: flex;
  margin: 0;
  padding: 0;
  border-bottom: 2rpx solid #d9d9d9;
}
.navbar .navbar-item {
  display: flex;
  justify-content: center;
  align-items: center;
  cursor: pointer;
  box-sizing: border-box;
  width: 50%;
  height: 80rpx;
  text-align: center;
}
.navbar .navbar-item .navbar-text {
  transition: color 0.2s linear;
  color: #2db7f5;
  font-size: 32rpx;
  display: inline-block;
  line-height: 35rpx;
  text-decoration: none;
  overflow: hidden;
}
.navbar .navbar-item .navbar-text.active {
  font-weight: bold;
}
.navbar .navbar-item.active {
  border-bottom: 8rpx solid #2db7f5;
}
.hidden {
  display: none;
}
.slide-image {
  width: 100%;
  height: 100%;
}
.line-text {
  font-size: 14px;
  border-left: 2px solid #000;
  padding-left: 5px;
  margin: 10px 10px;
}
.an-nav-top-bottom {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  height: 160rpx;
  cursor: pointer;
  border-bottom: 2rpx solid #d9d9d9;
}
.an-top-left {
  margin-left: 20rpx;
}
.an-top-left .avatar {
  height: 120rpx;
  width: 120rpx;
  border-radius: 10 rpx;
  border: 2rpx solid #e0e0e0;
}
.an-top-middle {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
  margin-left: -300rpx;
}
.an-top-middle div .an-top-span1 {
  font-size: 48rpx;
  color: grey;
}
.an-top-middle div .an-top-span2 {
  font-size: 26rpx;
  color: #a5a5a5;
}
.an-top-arrow {
  margin-right: 20rpx;
}
.an-row {
  display: flex;
  border: 2rpx solid #e1e1e1;
  margin: 10px 0px 20px;
}
.an-row .an-row-create {
  cursor: pointer;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #00bcd4;
  font-size: 32rpx;
  box-sizing: border-box;
  width: 40%;
  height: 68rpx;
  border-right: 2rpx solid #e1e1e1;
}
.an-row .an-row-add {
  cursor: pointer;
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  width: 20%;
  height: 68rpx;
  border-right: 2rpx solid #e1e1e1;
  background-color: #29d6ec;
  font-size: 2em;
  font-weight: bold;
  color: #ffffff;
}
.an-row .an-row-joined {
  cursor: pointer;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #00bcd4;
  font-size: 32rpx;
  box-sizing: border-box;
  width: 40%;
}
.an-row .an-row-create.active,
.an-row .an-row-joined.active {
  background-color: #e8fcff;
}
.an-course {
  margin: 0;
  width: 100%;
  height: 150rpx;
  border-bottom: 2rpx solid #e0e0e0;
}
.an-course .an-course-inner {
  height: 118rpx;
  margin: 20rpx 12rpx 12rpx;
}
.an-course .an-course-inner .an-course-col {
  float: left;
  box-sizing: border-box;
  padding: 0 24rpx;
}
.an-course .an-course-inner .an-course-col .an-course-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #00bcd4;
}
.an-course .an-course-inner .an-course-col .an-course-s12 {
  word-wrap: break-word;
  font-size: 24rpx;
  color: grey;
}
.an-course .an-course-inner .an-course-col.s12 {
  margin-top: 16rpx;
  width: 100%;
}
.an-loadmore {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  cursor: pointer;
  color: #00bcd4;
  margin-top: 40rpx;
  margin-bottom: 60rpx;
}
.an-flex-row {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.an-flex-row .an-none-data {
  margin-top: 80rpx;
  padding-bottom: 200rpx;
  font-size: 36rpx;
  color: grey;
}
.an-research {
  margin: 20rpx 0 40rpx;
}
.an-research .an-research-row {
  width: 100%;
  height: 68rpx;
  display: flex;
  margin: 0;
  padding: 0;
}
.an-research .an-research-row .an-research-col {
  cursor: pointer;
  box-sizing: border-box;
  width: 33.33%;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #ffffff;
  border-bottom: 2rpx solid #e0e0e0;
  border-top: 2rpx solid #e0e0e0;
  transition: all 150ms linear;
}
.an-research .an-research-row .an-research-col .an-research-text {
  transition: color 0.2s linear;
  color: #00bcd4;
  font-size: 32rpx;
  display: inline-block;
  line-height: 2em;
  overflow: hidden;
}
.an-research .an-research-row .an-research-col.active {
  background-color: #e8fcff;
}
.an-research .an-research-iwrap {
  position: relative;
  padding-bottom: 40rpx;
}
.an-research .an-research-iwrap .an-research-tab {
  height: 60rpx;
  width: 100%;
  padding: 24rpx;
  margin-bottom: 24rpx;
  border-bottom: 2rpx solid #e0e0e0;
}
.an-research .an-research-iwrap .an-research-tab .an-research-item1 {
  position: absolute;
  left: 12px;
}
.an-research-item1 {
  position: absolute;
  left: 24rpx;
}
.an-research-item2 {
  position: absolute;
  right: 24rpx;
}
