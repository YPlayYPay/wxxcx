<scroll-view class="container" scroll-y="true">
    <view class="slide">
        <div class='an_top_left_part' style="float: 'left'">
            <div class="an_left_info_user_head">
                <img class="avatar" src="{{userInfo.avatarUrl}}"/>
            </div>
        </div>
        <div class='an_top_right_part' style="float: 'left'">
            <div class="an_left_info_user_info_list">
                <div class="an_left_info_user_info_name" style="marginTop: 10">
                    <span style="fontSize: 24,color: 'grey',paddingLeft: 30">
                        {{userInfo.name}}
                    </span>
                </div>
                <div class="an_left_info_user_info_ss">
                    <div class="an_left_info_user_info_s">
                        <span style="paddingLeft: 30,fontSize: 13,color: '#A5A5A5'">
                            {{}}
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <a style="position: 'absolute',top: 70,right: 20,fontSize: 20"> > </a>
    </view>
    <view class="board" scroll-y="true">
        <block wx:for="{{ boards }}" wx:key="{{ item.key }}">
            <view class="board-item">
                <navigator url="../list/list?type={{ item.key }}&title={{ item.title }}" hover-class="none">
                    <view class="title">
                        <text>{{ item.title }}</text>
                        <image src="../../images/arrowright.png" mode="aspectFill"/>
                    </view>
                </navigator>
                <scroll-view class="content" scroll-x="true">
                    <view class="inner">
                        <navigator wx:for="{{ item.movies }}" wx:key="{{ item.id }}"
                                   url="../item/item?id={{ item.id }}">
                            <view class="movie-item">
                                <image src="{{ item.images.medium }}" mode="aspectFill"/>
                                <text>{{ item.title }}</text>
                            </view>
                        </navigator>
                    </view>
                </scroll-view>
            </view>
        </block>
    </view>
</scroll-view>
