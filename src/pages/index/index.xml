<scroll-view class="container" scroll-y="true">
    <view bindtap="bindViewTap">
        <div>
            <img src="{{userInfo.avatarUrl}}"/>
        </div>
        <div>
            <div>
                <span>
                    {{userInfo.nickName}}
                </span>
            </div>
            <div>
                <span>
                    {{userInfo.orgName}}
                </span>
            </div>
        </div>
        <a> > </a>
    </view>
    <view class="navbar">
        <view class="navbar-item" wx:for="{{navbar}}" wx:for-index="idx" data-idx="{{idx}}" bindtap="swichNav">
            <text class="navbar-text {{currentNavbar==idx ? 'active' : ''}}">{{item}}</text>
        </view>
    </view>
    <block wx:for="{{list}}">
        <view>
            <view data-row-id="{{item.row_id}}" bindtap="onItemClick">
                <view>
                    <text>{{item.name}}</text>
                    <text>{{item.time}}</text>
                </view>
            </view>
        </view>
    </block>
</scroll-view>
